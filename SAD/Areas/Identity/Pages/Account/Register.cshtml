@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section>
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center mt-5">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <h3 class="mb-5">Register</h3>

            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                @*First Name*@
                <div class="form-floating mb-2">
                    <input asp-for="Input.FName" class="form-control" aria-required="true"/>
                    <label asp-for="Input.FName"></label>
                    <span asp-validation-for="Input.FName" class="text-danger"></span>
                </div>

                @*Last Name*@
                <div class="form-floating my-2">
                    <input asp-for="Input.SName" class="form-control" aria-required="true"/>
                    <label asp-for="Input.SName"></label>
                    <span asp-validation-for="Input.SName" class="text-danger"></span>
                </div>

                @*Email*@
                <div class="form-floating my-4">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                @*Password*@
                <div class="form-floating my-2">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.Password"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                @*Confirm Password*@
                <div class="form-floating mt-2 mb-5">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.ConfirmPassword"></label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                @*Role Dropdown*@
                <div class="form-group">
                    <select asp-for="Input.UserRole" asp-items="@(Model.Roles)">
                        <option>Please select a role</option>
                    </select>
                    <span asp-validation-for="Input.UserRole" class="text-danger"></span>
                </div>

                            <div>
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                </div>

                <p class="small fw-bold mt-2 pt-1 mb-0">Already have an account?<a class="link-danger" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Login</a></p>
            </form>


            <hr class="my-4">

          </div>
        </div>
      </div>
    </div>
  </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
